{
  "workspaces": [
    "server",
    "client"
  ],
  "scripts": {
    "bundle:openapi": "npx @redocly/cli bundle ./openapi.yaml -o ./openapi/bundled.yaml",
    "docs:openapi": "npx @redocly/cli build-docs ./openapi/bundled.yaml -o ../docs/api.html",
    "build": "npm run bundle:openapi && npm run docs:openapi",
    "lint": "redocly lint ./openapi.yaml --config ../redocly.yaml"
  },
  "devDependencies": {
    "@redocly/cli": "^2.1.4",
    "openapi-typescript": "^7.9.1"
  }
}
